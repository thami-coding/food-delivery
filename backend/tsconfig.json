{
  "compilerOptions": {
    "module": "commonjs",
    "types": [
      "node",
      "jest"
    ],
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": false,
    "target": "ESNext",
    "outDir": "./dist",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
, "jest.setup.ts"  ],
  "exclude": [
    "node_modules"
  ]
}